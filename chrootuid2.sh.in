n=
if [ -n "$1" -a -z "${1##-*}" ]; then
	n="$1"
	shift
fi

chroot_prefix=
if [ -n "$1" ]; then
	chroot_prefix="$1"
fi

killuid()
{
	sudo @helper@ $n killuid2
}

exit_handler()
{
	local rc=$?
	trap - EXIT
	[ -z "$chroot_prefix" -o -z "$mount_fstypes" ] ||
		sudo @helper@ $n umount "$chroot_prefix" ||:
	killuid
	exit $rc
}

killuid

trap exit_handler EXIT HUP INT QUIT PIPE TERM

if [ -n "$chroot_prefix" -a -n "$mount_fstypes" ]; then
	for fs in $mount_fstypes; do
		sudo @helper@ $n mount "$chroot_prefix" "$fs"
	done
fi

sudo @helper@ $n chrootuid2 "$@"
