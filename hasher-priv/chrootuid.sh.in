n=
if [ -n "$1" -a -z "${1##-*}" ]; then
	n="$1"
	shift
fi

killuid()
{
	@helper@ $n killuid
}

exit_handler()
{
	local rc=$1
	killuid
	exit $rc
}

killuid

trap 'exit 143' HUP INT QUIT PIPE TERM
trap 'exit_handler $?' EXIT

@helper@ $n chrootuid@N@ "$@"
